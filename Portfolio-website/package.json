{
  "name": "jxcobie-portfolio",
  "version": "1.0.0",
  "private": true,
  "description": "Modern cyberpunk-themed portfolio website for full-stack developer with n8n automation expertise",
  "author": "Jacob Jaballah <hello@jxcobcreations.com>",
  "license": "MIT",
  "keywords": [
    "portfolio",
    "nextjs",
    "react",
    "typescript",
    "cyberpunk",
    "full-stack",
    "n8n-automation",
    "tailwindcss"
  ],
  "homepage": "https://jxcobcreations.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/jxcobie/portfolio"
  },
  "bugs": {
    "url": "https://github.com/jxcobie/portfolio/issues"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "volta": {
    "node": "20.18.0",
    "npm": "10.8.2"
  },
  "scripts": {
    "dev": "next dev",
    "dev:turbo": "next dev --turbo",
    "build": "next build",
    "build:analyze": "ANALYZE=true next build",
    "start": "next start",
    "start:prod": "NODE_ENV=production next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,scss,md,mdx}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,scss,md,mdx}\"",
    "clean": "rm -rf .next out node_modules/.cache",
    "prepare": "husky",
    "pre-commit": "lint-staged",
    "test": "echo \"No tests specified yet\"",
    "validate": "npm run type-check && npm run lint && npm run format:check",
    "deploy": "npm run validate && npm run build"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@radix-ui/react-accordion": "^1.2.11",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tooltip": "^1.2.8",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.12",
    "isomorphic-dompurify": "^2.29.0",
    "lucide-react": "^0.536.0",
    "next": "15.4.5",
    "next-themes": "^0.4.6",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hook-form": "^7.65.0",
    "react-icons": "^5.5.0",
    "recharts": "^3.1.2",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@tailwindcss/postcss": "^4.1.13",
    "@types/node": "^20.17.10",
    "@types/react": "^19.0.6",
    "@types/react-dom": "^19.0.4",
    "@types/webpack": "^5.28.5",
    "@typescript-eslint/eslint-plugin": "^8.23.0",
    "@typescript-eslint/parser": "^8.23.0",
    "eslint": "^9.21.0",
    "eslint-config-next": "15.4.5",
    "eslint-config-prettier": "^10.0.2",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.1.2",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.12",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "tailwindcss": "^4.1.13",
    "typescript": "^5.7.3",
    "webpack-bundle-analyzer": "^4.10.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,scss,md,mdx}": [
      "prettier --write"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
