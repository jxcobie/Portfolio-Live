{
  "name": "portfolio-cms",
  "private": true,
  "version": "2.0.0",
  "description": "Professional CMS for portfolio website with SQLite database",
  "main": "server.js",
  "scripts": {
    "start": "npm --workspace @portfolio-cms/api run start",
    "dev": "npm run dev:api",
    "dev:api": "npm --workspace @portfolio-cms/api run dev",
    "build:api": "npm --workspace @portfolio-cms/api run build",
    "dev:admin": "npm --workspace @portfolio-cms/admin-ui run dev",
    "build:admin": "npm --workspace @portfolio-cms/admin-ui run build",
    "test": "npm run test --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "typecheck": "npm run typecheck --workspaces --if-present"
  },
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ]
  },
  "dependencies": {},
  "devDependencies": {
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-promise": "^7.2.1",
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=18.18.0"
  }
}
