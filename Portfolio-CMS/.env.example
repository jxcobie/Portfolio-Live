# Server Configuration
CMS_PORT=1337
NODE_ENV=development

# Security
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# Database (SQLite path is relative to CMS root)
DATABASE_PATH=./cms_database.db

# Bootstrap Admin Credentials (set strong secrets; omit password to auto-generate on init)
CMS_BOOTSTRAP_ADMIN_USER=admin
CMS_BOOTSTRAP_ADMIN_PASSWORD=

# Optional overrides for test scripts
CMS_ADMIN_USER=
CMS_ADMIN_PASSWORD=

# CMS public URL (used by scripts/tests)
CMS_BASE_URL=http://localhost:1337

# File Upload
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_DIR=./uploads

# CORS (comma-separated list of allowed origins)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3002

# Rate Limiting
RATE_LIMIT_WINDOW_MINUTES=15
RATE_LIMIT_MAX_REQUESTS=500
RATE_LIMIT_AUTH_WINDOW_MINUTES=15
RATE_LIMIT_AUTH_REQUESTS=10

# Hostinger Email Configuration
SMTP_HOST=smtp.hostinger.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@yourdomain.com
SMTP_PASS=your-hostinger-email-password
EMAIL_FROM=your-email@yourdomain.com
